promptUserHost () {
    if $remote ; then
        print -P "\e[1m%n\e[0m@\e[32m%m\e[0m" ;
    fi
}
second_row_functions+=(promptUserHost)

promptDate () {
    if $remote ; then
        date +'%Y.%m.%d %I:%M%p' ;
    else
        date +'%B %e, %I:%M %p' ;
    fi
}
second_row_functions+=(promptDate)

